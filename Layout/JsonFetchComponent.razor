@using UserData

@code {
    // Props 'parameter' som tas emot från parent. Tar emot data som array av typen 'UserDataClass'. Definerad i UserDataClass.cs

    [Parameter]

    public UserDataClass[]? UsersDataArray { get; set; }
}

<h3>Component för att presentera data</h3>

@if (UsersDataArray == null)
{
    <p>finns inga kurser</p>

}
else {

    <table>
        <tr>
            <th>Kod</th>
            <th>Namn</th>
            <th>Progression</th>
            <th>Länk</th>
        </tr>

        @foreach (var user in UsersDataArray)
        {

            <tr>
                <td>@user.Code</td>
                <td>@user.CourseName</td>
                <td>@user.Progression</td>
                <td><a href="@user.Syllabus" target="_blank">Länk</a></td>
            </tr>            
        }

    </table>



}